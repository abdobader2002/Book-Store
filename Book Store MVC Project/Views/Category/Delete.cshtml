@model Category

<form method="post" novalidate>
    <input asp-for="Id" type="hidden" />

    <div class="create-card">
        <div class="create-header">
            <div>
                <h2 class="h5 mb-0">Delete Category</h2>
                <div class="lead text-warning">This action cannot be undone</div>
            </div>
            <div>
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary btn-wide">
                    <i class="bi bi-list-ul"></i> Back to List
                </a>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Category Name</label>
            <input class="form-control form-control-lg" value="@Model.Name" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Display Order</label>
            <input class="form-control form-control-lg" value="@Model.DisplayOrder" readonly />
        </div>

        <div class="form-actions d-flex flex-wrap gap-2">
            <button type="submit" class="btn btn-danger btn-wide">Delete</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary btn-wide">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


