
@model ProductViewModel

<form method="post" novalidate>
    <div class="create-card">
        <div class="create-header">
            <div>
                <h2 class="h5 mb-0">Create Product</h2>
                
            </div>
            <div>
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary btn-wide">
                    <i class="bi bi-list-ul"></i> Back to List
                </a>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Product.Title" class="form-label"></label>
            <input asp-for="Product.Title" class="form-control form-control-lg"  />
            <span asp-validation-for="Product.Title" class="text-danger field-error"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Product.Description" class="form-label"></label>
            <input asp-for="Product.Description" class="form-control form-control-lg" />
            <span asp-validation-for="Product.Description" class="text-danger field-error"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.ISBN" class="form-label"></label>
            <input asp-for="Product.ISBN" class="form-control form-control-lg" />
            <span asp-validation-for="Product.ISBN" class="text-danger field-error"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.Author" class="form-label"></label>
            <input asp-for="Product.Author" class="form-control form-control-lg"  />
            <span asp-validation-for="Product.Author" class="text-danger field-error"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.CategoryId" class="form-label"></label>
            <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select form-control-lg shadow-1">
                <option disabled selected>--Select Categoty--</option>
            </select>
            <span asp-validation-for="Product.CategoryId" class="text-danger field-error"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.ListPrice" class="form-label"></label>
            <input asp-for="Product.ListPrice" class="form-control form-control-lg" placeholder="1" />
            <span asp-validation-for="Product.ListPrice" class="text-danger field-error"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.price" class="form-label"></label>
            <input asp-for="Product.price" class="form-control form-control-lg" placeholder="1" />
            <span asp-validation-for="Product.price" class="text-danger field-error"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.Price50Plus" class="form-label"></label>
            <input asp-for="Product.Price50Plus" class="form-control form-control-lg" placeholder="1" />
            <span asp-validation-for="Product.Price50Plus" class="text-danger field-error"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.Price100Plus" class="form-label"></label>
            <input asp-for="Product.Price100Plus" class="form-control form-control-lg" placeholder="1" />
            <span asp-validation-for="Product.Price100Plus" class="text-danger field-error"></span>
        </div>

        <div class="form-actions d-flex flex-wrap gap-2">
            <button type="submit" class="btn btn-primary btn-wide">Create</button>
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary btn-wide">
                Cancel
            </a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

