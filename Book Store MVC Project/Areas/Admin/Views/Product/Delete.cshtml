@model Product

<form method="post" novalidate>
    <input asp-for="Id" type="hidden" />

    <div class="create-card">
        <div class="create-header">
            <div>
                <h2 class="h5 mb-0">Delete Product</h2>
                <div class="lead text-warning">This action cannot be undone</div>
            </div>
            <div>
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary btn-wide">
                    <i class="bi bi-list-ul"></i> Back to List
                </a>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control form-control-lg" placeholder="e.g. Science Fiction" />
        </div>

        <div class="mb-3">
            <label asp-for="Description"  class="form-label"></label>
            <input asp-for="Description" diabled class="form-control form-control-lg" placeholder="1" />
        </div>
        <div class="mb-3">
            <label asp-for="ISBN" class="form-label"></label>
            <input asp-for="ISBN" diabled class="form-control form-control-lg" placeholder="1" />
        </div>
        <div class="mb-3">
            <label asp-for="Author" class="form-label"></label>
            <input asp-for="Author" diabled class="form-control form-control-lg" placeholder="1" />
        </div>
        <div class="mb-3">
            <label asp-for="ListPrice" class="form-label"></label>
            <input asp-for="ListPrice" diabled class="form-control form-control-lg" placeholder="1" />
        </div>
        <div class="mb-3">
            <label asp-for="price" class="form-label"></label>
            <input asp-for="price" diabled class="form-control form-control-lg" placeholder="1" />
        </div>
        <div class="mb-3">
            <label asp-for="Price50Plus" class="form-label"></label>
            <input asp-for="Price50Plus" diabled class="form-control form-control-lg" placeholder="1" />
        </div>
        <div class="mb-3">
            <label asp-for="Price100Plus" class="form-label"></label>
            <input asp-for="Price100Plus" diabled class="form-control form-control-lg" placeholder="1" />
        </div>

        <div class="form-actions d-flex flex-wrap gap-2">
            <button type="submit" class="btn btn-danger btn-wide">Delete</button>
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary btn-wide">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


