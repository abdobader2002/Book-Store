@using Microsoft.AspNetCore.Identity
@using BookStore.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager



<div class="container-fluid dashboard-container">
    <div class="row row-gap-xxl-3">
        
        <aside class="col-md-3 col-lg-2 p-0 me-4">
            <div class="p-3 border-bottom">
                <h5 class="mb-0"><i class="bi bi-person-circle"></i> My Account</h5>
            </div>
            <nav>
                <a href="#" class="menu-item active" onclick="loadSection('account-data')">
                    <i class="bi bi-person-gear"></i>
                    <span>Account Data</span>
                </a>
                <a href="#" class="menu-item" onclick="loadSection('addresses')">
                    <i class="bi bi-geo-alt"></i>
                    <span>Addresses</span>
                </a>
                <a href="#" class="menu-item" onclick="loadSection('orders')">
                    <i class="bi bi-bag-check"></i>
                    <span>Order History</span>
                </a>
                <a href="#" class="menu-item delete-account" onclick="confirmDelete()">
                    <i class="bi bi-trash"></i>
                    <span>Delete Account</span>
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="col-md-9 col-lg-10">
            <div class="dashboard-header">
                <h2>Account Overview</h2>
                <p class="text-muted">Manage your account information and settings</p>
            </div>

            <!-- User Information Card -->
            <div class="info-card">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="mb-0"><i class="bi bi-person-badge"></i> Personal Information</h4>
                    <span class="badge bg-success badge-status">Active</span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="info-row">
                            <div class="info-label">Full Name</div>
                            <div class="info-value">John Doe</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-row">
                            <div class="info-label">Email Address</div>
                            <div class="info-value">john.doe@example.com</div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="info-row">
                            <div class="info-label">Phone Number</div>
                            <div class="info-value">+1 (555) 123-4567</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-row">
                            <div class="info-label">Account Created</div>
                            <div class="info-value">January 15, 2023</div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="info-row">
                            <div class="info-label">Last Login</div>
                            <div class="info-value">November 14, 2025 - 10:30 AM</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-row">
                            <div class="info-label">Account ID</div>
                            <div class="info-value">#USR-2023-001542</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Account Statistics -->
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="info-card text-center">
                        <i class="bi bi-bag-check text-primary" style="font-size: 2rem;"></i>
                        <h3 class="mt-3 mb-1">24</h3>
                        <p class="text-muted mb-0">Total Orders</p>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="info-card text-center">
                        <i class="bi bi-geo-alt text-success" style="font-size: 2rem;"></i>
                        <h3 class="mt-3 mb-1">3</h3>
                        <p class="text-muted mb-0">Saved Addresses</p>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="info-card text-center">
                        <i class="bi bi-heart text-danger" style="font-size: 2rem;"></i>
                        <h3 class="mt-3 mb-1">12</h3>
                        <p class="text-muted mb-0">Wishlist Items</p>
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="info-card">
                <h4 class="mb-3"><i class="bi bi-clock-history"></i> Recent Activity</h4>
                <div class="info-row">
                    <div class="d-flex justify-content-between">
                        <span><i class="bi bi-box-seam text-primary"></i> Order #ORD-2025-1142 placed</span>
                        <span class="text-muted">2 days ago</span>
                    </div>
                </div>
                <div class="info-row">
                    <div class="d-flex justify-content-between">
                        <span><i class="bi bi-truck text-success"></i> Order #ORD-2025-1138 delivered</span>
                        <span class="text-muted">1 week ago</span>
                    </div>
                </div>
                <div class="info-row">
                    <div class="d-flex justify-content-between">
                        <span><i class="bi bi-geo-alt text-info"></i> New address added</span>
                        <span class="text-muted">2 weeks ago</span>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function loadSection(section) {
            // Remove active class from all menu items
            document.querySelectorAll('.menu-item').forEach(item => {
                item.classList.remove('active');
            });

            // Add active class to clicked item
            event.target.closest('.menu-item').classList.add('active');

            // In a real MVC application, this would route to different controller actions
            console.log('Loading section: ' + section);
            alert('In a real MVC application, this would load: ' + section + ' view');
        }

        function confirmDelete() {
            if (confirm('Are you sure you want to delete your account? This action cannot be undone.')) {
                alert('In a real MVC application, this would call the delete account controller action');
            }
        }
    </script>
}