@model BookStore.Models.ShopCart

@{
    ViewData["Title"] = "Shopping Cart";
    double total = Model?.Items?.Sum(i => i.productCount * i.Product.price) ?? 0;
}

<div class="container py-4">
    <h2 class="mb-4 text-primary fw-bold">Your Shopping Cart</h2>

    @if (Model == null || Model.Items == null || !Model.Items.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-cart-x fs-3"></i>
            <p class="mt-2 mb-0">Your cart is empty.</p>
        </div>
    }
    else
    {
        <table class="table table-striped align-middle">
            <thead class="table-primary">
                <tr>
                    <th>Product</th>
                    <th class="text-center">Quantity</th>
                    <th class="text-end">Price</th>
                    <th class="text-end">Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="@item.Product.ImgUrl" alt="@item.Product.Title"
                                     class="me-3 rounded" style="width:60px;height:60px;object-fit:cover;" />
                                <div>
                                    <h6 class="mb-0 fw-semibold">@item.Product.Title</h6>
                                    <small class="text-muted">@item.Product.Author</small>
                                </div>
                            </div>
                        </td>
                        <td class="text-center">
                            <form asp-action="Add" method="post" class="d-inline">
                                <input type="hidden" name="productId" value="@item.Product.Id" />
                                <input type="number" name="quantity" value="@item.productCount" min="1"
                                       class="form-control d-inline w-50 text-center" />
                                <button type="submit" class="btn btn-sm btn-outline-success mt-1">Update</button>
                            </form>
                        </td>
                        <td class="text-end">@item.Product.price.ToString("C")</td>
                        <td class="text-end">@((item.Product.price * item.productCount).ToString("C"))</td>
                        <td class="text-end">
                            <form asp-action="Remove" method="post">
                                <input type="hidden" name="cartItemId" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Remove
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="row mt-4">
            <div class="col-md-6">
                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left"></i> Continue Shopping
                </a>
            </div>
            <div class="col-md-6 text-end">
                <h4>Total: <span class="text-success">@total.ToString("C")</span></h4>
                <a asp-action="Checkout" class="btn btn-success btn-lg mt-2">
                    Proceed to Checkout
                </a>
            </div>
        </div>
    }
</div>
